    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="switchStyle">@style/switch_optimus_iphone</item>
 
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
    
     <style name="WebViewToolBarImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

      <style name="switch_optimus" parent="android:Widget.CompoundButton">
        <item name="thumb">@drawable/switch_inner</item>
        <item name="track">@drawable/skin_switch_track</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearanceSwitch</item>
        <item name="switchMinWidth">75.0dip</item>
        <item name="switchPadding">16.0dip</item>
    </style>

    <style name="switch_optimus_iphone" parent="android:Widget.CompoundButton">
        <item name="thumb">@drawable/switch_inner7</item>
        <item name="track">@drawable/switch_track7</item>
        <item name="textOn">@string/textOn7</item>
        <item name="textOff">@string/textOff7</item>
        <item name="switchTextAppearance">@style/TextAppearanceSwitch</item>
        <item name="thumbTextPadding">9.0dip</item>
        <item name="switchMinWidth">30.0dip</item>
        <item name="switchPadding">2.0dip</item>
    </style>
     
